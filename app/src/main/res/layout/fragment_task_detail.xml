<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView android:id="@+id/detail_task_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tytuł zadania"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView android:id="@+id/detail_task_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Opis zadania"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/detail_task_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView android:id="@+id/detail_task_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/detail_task_desc"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"/>

    <TextView android:id="@+id/detail_task_client"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Klient"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/detail_task_status"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"/>

    <TextView android:id="@+id/detail_task_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Czas pracy"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/detail_task_client"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"/>

    <TextView android:id="@+id/detail_task_completed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data ukończenia"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/detail_task_time"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>